---
loglevel: disabled
bootstrapVersion: 4
styleLoaders:
  - style
  - css
  - postcss
  - sass
env:
  development:
    extractStyles: false
  production:
    extractStyles: true
styles:
  # Mixins
  mixins: true

  # Reset and dependencies
  normalize: true
  print: true

  # Core CSS
  reboot: true
  type: true
  images: true
  code: true
  grid: true
  tables: true
  forms: true
  buttons: true

  # Components
  alert: true
  badge: true
  breadcrumb: true
  button-group: true
  card: true
  close: true
  custom-forms: true
  dropdown: true
  input-group: true
  jumbotron: true
  list-group: true
  media: true
  nav: true
  navbar: true
  pagination: true
  progress: true
  responsive-embed: true
  transitions: true

  # Components w/ JavaScript
  modal: true
  tooltip: true
  popover: true
  carousel: true

  # Utility classes
  utilities: true
scripts: true
useFlexbox: true
